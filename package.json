{
  "name": "crumble-media-streaming",
  "version": "1.0.0",
  "description": "A modular, web-based media streaming application with iOS-style interface",
  "main": "frontend/index.html",
  "scripts": {
    "start": "cd frontend && npx http-server -p 8080 -o",
    "dev": "cd frontend && npx http-server -p 3000 -o",
    "serve": "cd frontend && python3 -m http.server 8080",
    "proxy": "node backend/mdblist-proxy.js",
    "tmdb-proxy": "node backend/tmdb-proxy.js",
    "mdblist-service": "node backend/mdblist-proxy.js",
    "dev:full": "concurrently \"npm run proxy\" \"cd frontend && python3 -m http.server 3001\"",
    "dev:complete": "concurrently \"npm run proxy\" \"npm run tmdb-proxy\" \"npm run dev\"",
    "build": "echo 'No build process required - static files ready to serve'",
    "test": "node test-mdblist-lib.js",
    "test:mdblist": "node test-mdblist-lib.js",
    "lint": "echo 'No linting configured yet'"
  },
  "keywords": [
    "media",
    "streaming",
    "movies",
    "tv-series",
    "stremio",
    "tmdb",
    "ios-interface",
    "dark-theme",
    "modular",
    "web-app"
  ],
  "author": "CRUMBLE Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/CRUMB.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/CRUMB/issues"
  },
  "homepage": "https://github.com/yourusername/CRUMB#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "@tabler/icons-react": "^3.34.1",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/vite": "^4.1.11",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mdblist-lib": "^1.0.2",
    "motion": "^12.23.12",
    "node-fetch": "^2.7.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "http-server": "^14.1.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
